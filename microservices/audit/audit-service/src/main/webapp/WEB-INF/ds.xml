<?xml version="1.0" encoding="UTF-8"?>
<datasources xmlns="http://www.jboss.org/ironjacamar/schema"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.jboss.org/ironjacamar/schema http://docs.jboss.org/ironjacamar/schema/datasources_1_3.xsd">
    <datasource jndi-name="jdbc/crm_audit"
                pool-name="pool/crm_audit"
                use-java-context="false">
        <connection-url></connection-url>
        <pool>
            <max-pool-size>64</max-pool-size>
        </pool>
        <security>
            <user-name>${crm.db.audit.username}</user-name>
            <password>${crm.db.audit.password}</password>
        </security>
    </datasource>
</datasources>
